<%- include("./partials/header") %>

<div class="container fix3">
	<div class="row">
		<h1 style="text-align: center">Edit <%= expenses.title %></h1>
        <div style="width: 30%; margin:30px auto;">
			<form action="/expenses/<%= expenses._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="expenses[title]" value="<%= expenses.title %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="expenses[price]" value="<%= expenses.price %>" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="expenses[description]" value="<%= expenses.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
				</div>	
			</form>
			<a href="/expenses">GO BACK</a>
		</div>			   
	</div>
</div>



<%- include("./partials/footer") %>